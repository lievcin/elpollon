<%= form_for @team, :html => { :class => 'form form-horizontal' } do |f| %>
  <div class="form-group">
    <label class="col-md-2 control-label" for="inputName">Nombre</label>
    <div class="col-md-5">
      <%= f.text_field :name, id: 'inputName', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label" for="inputClave">Acronym</label>
    <div class="col-md-5">
      <%= f.text_field :acronym, id: 'inputClave', class: 'form-control'%>	
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label" for="inputClave">Country</label>
    <div class="col-md-5">
      <%= f.text_field :country, id: 'inputClave', class: 'form-control'%>	
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label" for="inputClave">Logo</label>
    <div class="col-md-5">
      <%= f.text_field :logo, id: 'inputClave', class: 'form-control'%>	
    </div>
  </div>

  <div class="form-actions form-actions-padding-sm">
    <div class="row">
      <div class="col-md-10 col-md-offset-2">	
        <%= f.submit 'Guardar equipo', :class => 'btn btn-success'%>
        <%= link_to 'Cancelar', main_path, :class => 'btn btn-danger' %>
      </div>
    </div>
  </div>

<% end %>