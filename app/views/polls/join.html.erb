<div class="row">
	<div class="span8">
		<div class="main_content">
			<h2>Join poll</h2>

			<p>You can join your friends poll and compete with them</p>

			<p>To join you need the name and password of the community</p>

			<%= form_tag join_path, :method => 'get' do %>

				<p>
					<%= label_tag "Poll name" %> 
					<%= text_field_tag :poll_search, params[:poll_search] %>
					<%= label_tag "Poll password" %> 
					<%= password_field_tag :poll_pass, params[:poll_pass] %>
					<%= submit_tag "Join!", :name => nil %>
				</p>
			<% end %>
			<ul>
			</ul>
		</div>
	</div>
</div>