<h3>Polls overview</h3>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Cup</th>
    <th>Admin User</th>
    <th>Password</th>
    <th>Created on</th>
    <th>Members</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @polls.each do |poll| %>
    <tr>
        <td><%= poll.name %></td>
        <td><%= poll.cup.name %></td>
        <td><%= User.find(poll.admin_id).name  %></td>
        <td><%= poll.password %></td>
        <td><%= poll.created_at.strftime("%d.%m.%y") %></td>
        <td><%= poll.users.count %></td>
        <td><%= link_to 'view', poll %></td>
        <td><%= link_to 'delete', poll, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
</table>

<br />

