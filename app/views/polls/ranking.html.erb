<div class="page-header">
  <h1><%= link_to @poll.name, poll_path(:id => @poll.id), :class => "list-group-item"%></h1>
</div>

<% if current_user.id == @poll.admin_id %>  
<div>
	<%= link_to 'Editar', edit_poll_path(@poll), :class => 'btn btn-info' %>	
	<%= link_to 'Destruir', @poll, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-danger' %>
<% end %>  

<div>
  <%= link_to "Invita a tus amigos en Facebook", "#", class: "btn btn-primary fb-invite" %>
</div>	

<div>	
  <%= link_to "Miembros", members_path(:id => @poll.id), class: "btn btn-warning" %>
</div>
