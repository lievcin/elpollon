<div class="ss-header">
	<h3><%= link_to @poll.name, poll_path(:id => @poll.id)%> - Clasificación		
		<small class= "poll-actions pull-right">
		  <div class="btn-group">			
			<a class="btn btn-mini btn-primary" href="#password" data-toggle="modal" id="#icon-share"><i class="icon-white icon-share"></i></a>
			<% if current_user.id === @poll.admin_id %>			
			  <button class="btn btn-mini">Administrar</button>
		  	  <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
		        <span class="caret"></span>
		  	  </button>
				<ul class="dropdown-menu">
		    	  <li><%= link_to 'Editar', edit_poll_path(@poll) %></li>
				  <li><%= link_to 'Destruir', @poll, method: :delete, data: { confirm: 'Esta seguro?' } %>
		  	    </ul>
			  <% end %>			
		  </div>
		
		  <div class="btn-group">			
		    <%= link_to "Clasificación", ranking_path(:id => @poll.id), class: "btn btn-mini btn-warning" %>
	        <%= link_to "Invitar amigos en Facebook", "#", class: "btn btn-mini btn-primary fb-invite" %>			
		  </div>		
	    </small>
	</h3>
</div>

