<%= simple_form_for(@bet) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :poll_id %>
    <%= f.input :game_id %>
    <%= f.input :home_bet %>
    <%= f.input :away_bet %>
    <%= f.input :home_bet_pt %>
    <%= f.input :away_bet_pt %>
    <%= f.input :total_points %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
