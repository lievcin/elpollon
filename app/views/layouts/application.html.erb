<!DOCTYPE html>
<html>
<head>
  <title>El Pollon</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	

	<div class="navbar">
	      <div class="navbar-inner" id='navbar'>
	        <div class="container">
	          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          <a class="brand" href="#">El Pollon</a>
	          <div class="nav-collapse collapse">
	            <ul class="nav pull-right">
	              <li class="">
	                <a href="#"><%=current_user.name%></a>
	              </li>
	            </ul>
	          </div>
	        </div>
	      </div>
	    </div>





    <div class="container">	
	  <div id="fb-root"></div>
	  <div class="row">
	    <div class="span3">
		  <ul class="nav nav-list bs-docs-sidenav affix-top">
		    <%= link_to "Create a new poll", new_poll_path, :class => "list-group-item"%>	
		    <%= link_to "Join an existing poll", join_path, :class => "list-group-item"%>
	        <br />
		    <% current_user.polls.each do |poll| %>
		      <%= link_to poll.name, poll_path(:id => poll.id), :class => "list-group-item"%>
		    <% end %>				
		  </ul>
	    </div>
	  <div class="span9">
	    <%= yield %>
	  </div> 
 	  </div> 
 	</div> 

</body>
</html>


