<h3>Enter Results</h3>

<table class="table table-striped table-condensed well">
  <tr>
    <th>Kick Off</th>
    <th>Home Team</th>
    <th>Away Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.kickoff.strftime("%d.%m.%y %H:%M") %></td>
    <td><%= Team.find(game.home_team_id).name %></td>
    <td><%= Team.find(game.away_team_id).name %></td>
	<td><%= form_for game, :remote => true do |f| %>
	    <%= f.number_field :home_score, :class => 'submittable' %>
	    <%= f.number_field :away_score, :class => 'submittable' %>
	  <% end %> 	
	</td>													

    <td><%= link_to "Enter Result", fix_result_game_path(game) %></td>

  </tr>
<% end %>
</table>

<br />
