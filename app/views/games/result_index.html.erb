<h3>Enter Results</h3>

<table class="table table-striped table-condensed" id="results_table">
  <thead class='header'>
	<th>Kick-Off</th>
	<th>Home Team</th>
	<th>After 90 Mins</th>
	<th>After ET</th>
	<th>Penalty Winner</th>
	<th>Away Team</th>
  </thead>
  <tbody>
	<% @games.each do |game| %>
	  <tr>
	    <td><%= game.kickoff.strftime("%d.%m.%y %H:%M") %></td>
	    <td><%= Team.find(game.home_team_id).name %></td>	
		<td><%= form_for game, :remote => true do |f| %>
		      <%= f.number_field :home_score, :class => 'submittable' %> : 
		      <%= f.number_field :away_score, :class => 'submittable' %>
		    <% end %> 
		</td>
		<td><%= form_for game, :remote => true do |f| %>
		      <%= f.number_field :home_score_et, :class => 'submittable' %> : 
	 	      <%= f.number_field :away_score_et, :class => 'submittable' %>
		    <% end %>
		</td>
		<td><%= form_for game, :remote => true do |f| %>
		      <%= f.check_box :home_score_pt, :class => 'submittable' %> : 
		      <%= f.check_box :away_score_pt, :class => 'submittable' %>
		    <% end %>
		</td>
		<td><%= Team.find(game.away_team_id).name %></td>		
	  </tr>
	<% end %>
</table>