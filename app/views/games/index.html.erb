<h3>List of games</h3>
<br />

<h4>Cup: <%= @cup.name %></h4>
<h4>Round: <%= @round.name %></h4>
<br />


<table class="table table-striped table-condensed">
  <tr>
    <th>Cup</th>
    <th>Round</th>
    <th>Kick Off</th>
    <th>Home Team</th>
    <th>Away Team</th>
    <th>Home Score</th>
    <th>Away Score</th>
    <th>Home ET</th>
    <th>Away ET</th>
    <th>Home Pen</th>
    <th>Away Pen</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
      <td><%= @cup.name %></td>
      <td><%= @round.name %></td>
      <td><%= game.kickoff.strftime("%d.%m.%y %H:%M") %></td>
      <td><%= Team.find(game.home_team_id).name %></td>
      <td><%= Team.find(game.away_team_id).name %></td>
      <td><%= game.home_score %></td>
      <td><%= game.away_score %></td>
      <td><%= game.home_score_et %></td>
      <td><%= game.away_score_et %></td>
      <td><%= game.home_score_pt %></td>
      <td><%= game.away_score_pt %></td>
      <td><%= link_to 'Show', game %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path(:cup_id => @cup.id, :round_id => @round.id) %>
<%= link_to 'Cup Rounds', cup_rounds_path(@cup) %><br />
