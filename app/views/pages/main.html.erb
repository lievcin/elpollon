<div class="span9 offset3">
	
	<div class="well">
		<h2>Next Games</h2>
		<table class="table table-striped table-condensed">
			<tr>
			  <th>Home Team</th>
			  <th></th>
			  <th>Away Team</th>
			  <th>Bet</th>
			  <th>Kick-off</th>
			  <th></th>
			  <th></th>
			</tr>
			<% @games.each do |game| %>
			  <tr>
				<td><%= truncate(Team.find(game.home_team_id).name, :length => 15) %></td>
				<td> - </td>
				<td><%= truncate(Team.find(game.away_team_id).name, :length => 15) %></td>				
				  <tr>
					<% game.polls.select{|poll| poll.users.include?(current_user)}.each do |poll| %>
						<% if Bet.where("user_id = ? and poll_id = ? and game_id = ?", current_user.id, poll.id, game.id).empty? %>
						  <td>1</td>	
						<% else %>		
						  <td>2</td>																		
						<% end%>										
					<% end%>
				  </tr>								
				<td><%= distance_of_time_in_words(Time.now, game.kickoff) %></td>
			   </tr>	
			<% end %>
		</table>
	</div>



	<div class="well">
	<h2>Polls overview</h3>
	<table class="table table-striped table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Cup</th>
	    <th></th>
	  </tr>

	<% @polls.each do |poll| %>
	    <tr>
	        <td><%= poll.name %></td>
	        <td><%= poll.cup.name %></td>
	        <td><%= link_to 'view', poll %></td>
	      </tr>
	    <% end %>
	</table>
	</div>

</div>