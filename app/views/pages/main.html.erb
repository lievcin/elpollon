	<% if @games.empty? %>
	<div>		
		<div class="content-header">
			<h2>
			  <a id="menu-toggle" href="#" class="btn btn-mini"><i class="icon-align-justify"></i></a>
			  Bienvenido al Pollón!
			</h2>
			<h3>
			  Bienvenido al Pollón!
			</h3>			

		</div>
		
	</div>	
	
	<% else %>	
	<div class="content-header">
		<h2>
		  <a id="menu-toggle" href="#" class="btn btn-mini"><i class="icon-align-justify"></i></a>
		  Partidos
		</h2>

	  	
		<table class="table">
			<tr>
			  <th></th>
			  <th></th>
			  <th></th>
			  <th></th>
			  <th></th>
			  <th></th>						
			</tr>			
			<% @games.each do |game| %>
			
			  <tr>
				<td><%= game.kickoff.in_time_zone(Time.zone).to_formatted_s(:short) %></td>				
				<td><%= truncate(Team.find(game.home_team_id).name, :length => 20) %></td>
				<td><%= image_tag(Team.find(game.home_team_id).logo, :id => 'team_logo') %></td>				
				<td> VS </td>
				<td><%= image_tag(Team.find(game.away_team_id).logo, :id => 'team_logo') %></td>												
				<td><%= truncate(Team.find(game.away_team_id).name, :length => 20) %></td>				
			   </tr>	
			<% end %>
		</table>
	</div>
	<% end %>	
