<div class="span9 offset3">
	
	<div class="well">
		<h2>Next Games</h2>
		<table class="table table-striped table-condensed">
			<tr>
			  <th>Home Team</th>
			  <th></th>
			  <th>Away Team</th>
			  <th>Bet</th>
			  <th>Kick-off</th>
			  <th></th>
			  <th></th>
			</tr>
			<% @games.each do |game| %>
			  <tr>
				<td><%= truncate(Team.find(game.home_team_id).name, :length => 15) %></td>
				<td> - </td>
				<td><%= truncate(Team.find(game.away_team_id).name, :length => 15) %></td>				
				  <% game.polls.select{|poll| poll.users.include?(current_user)}.each do |poll| %>
					<% @bet = Bet.where("user_id = ? and poll_id = ? and game_id = ?", current_user.id, poll.id, game.id) %>
					<% if @bet.empty? %>
					<td><%= form_for @new_bet, :remote => true do |f| %>
					    <%= f.hidden_field :game_id, :value => game.id %>
					    <%= f.hidden_field :poll_id, :value => poll.id %>
						<%= f.hidden_field :user_id, :value => current_user.id %>																
						<%= f.number_field :home_bet, :class => 'submittable' %> : 
						<%= f.number_field :away_bet, :class => 'submittable' %> 						
					  <% end %> 	
					</td>													
					  <% else %>		
					<td><%= form_for @bet[0], :remote => true do |f| %>
					    <%= f.hidden_field :game_id, :value => game.id %>
					    <%= f.hidden_field :poll_id, :value => poll.id %>
						<%= f.hidden_field :user_id, :value => current_user.id %>																
						<%= f.number_field :home_bet, :class => 'submittable' %> : 
						<%= f.number_field :away_bet, :class => 'submittable' %> 
					  <% end %> 	
					</td>
						<% end%>										
					<% end%>
				<td><%= distance_of_time_in_words(Time.now, game.kickoff) %></td>
			   </tr>	
			<% end %>
		</table>
	</div>



	<div class="well">
	<h2>Polls overview</h3>
	<table class="table table-striped table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Cup</th>
	    <th></th>
	  </tr>

	<% @polls.each do |poll| %>
	    <tr>
	        <td><%= poll.name %></td>
	        <td><%= poll.cup.name %></td>
	        <td><%= link_to 'view', poll %></td>
	      </tr>
	    <% end %>
	</table>
	</div>

</div>